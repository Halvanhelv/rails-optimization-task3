<h1>
  <%= "Buses #{@from.name} - #{@to.name}" %>
</h1>
<h2>
  <%= "#{@trips.length} trips in schedule" %>
</h2>

<% @trips.each do |trip| %>
  <% cache trip do %>
  <ul>
    <%= render "trip", trip: trip %>
    <% if trip.bus.services.present? %>

      <%= render "services", services: trip.bus.services %>
    <% end %>
    <% end %>
  </ul>
  <%= "====================================================" %>
<% end %>
